<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_pick.CustomPickFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image_preview_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_above="@+id/seekbarwrapper"/>
    <RelativeLayout
        android:id="@+id/values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekbarwrapper">
        <TextView
            android:id="@+id/value_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/value_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/seekbarwrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalListView_filters" />
    <com.meetme.android.horizontallistview.HorizontalListView
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:id="@+id/horizontalListView_filters"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:divider="#878787"
        widget:dividerWidth="2dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
